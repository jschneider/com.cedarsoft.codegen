<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="customerService" class="org.springframework.remoting.caucho.BurlapProxyFactoryBean">
    <!--<bean id="customerService" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">-->
    <property name="serviceUrl" value="http://localhost:8082/CustomerService" />
    <property name="serviceInterface" value="com.cedarsoft.gdao.GenericService" />
  </bean>

  <bean id="addressService" class="org.springframework.remoting.caucho.BurlapProxyFactoryBean">
    <!--<bean id="addressService" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">-->
    <property name="serviceUrl" value="http://localhost:8082/AddressService" />
    <property name="serviceInterface" value="com.cedarsoft.gdao.GenericService" />
  </bean>

</beans>
