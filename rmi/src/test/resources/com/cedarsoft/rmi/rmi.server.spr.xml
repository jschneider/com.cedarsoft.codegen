<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
    <property name="serviceName" value="addressDao" />
    <property name="service" ref="addressDao" />
    <property name="serviceInterface" value="com.cedarsoft.gdao.GenericDao" />
    <property name="registryPort" value="1199" />
  </bean>

  <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
    <property name="serviceName" value="customerDao" />
    <property name="service">
      <bean class="com.cedarsoft.gdao.spring.DaoFactory">
        <constructor-arg ref="genericDaoManager" />
        <constructor-arg value="com.cedarsoft.rmi.Customer" />
      </bean>
    </property>
    <property name="serviceInterface" value="com.cedarsoft.gdao.GenericDao" />
    <property name="registryPort" value="1199" />
  </bean>

</beans>
