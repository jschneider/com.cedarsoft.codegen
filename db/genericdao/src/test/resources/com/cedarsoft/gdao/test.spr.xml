<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="org.hsqldb.jdbcDriver" />
    <property name="url" value="jdbc:hsqldb:mem:gdaotest" />
    <property name="username" value="sa" />
    <property name="password" value="" />
  </bean>

  <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
    <property name="dataSource" ref="dataSource" />
    <property name="mappingResources">
      <list>
        <value>com/cedarsoft/gdao/MyObject.hbm.xml</value>
      </list>
    </property>
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
        <prop key="hibernate.hbm2ddl.auto">create</prop>
        <!--<prop key="hibernate.show_sql">false</prop>-->
        <!--<prop key="hibernate.use_sql_comments">true</prop>-->
        <!--<prop key="hibernate.format_sql">true</prop>-->
      </props>
    </property>
  </bean>

  <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="daoFactory" class="com.cedarsoft.gdao.hibernate.HibernateDaoFactory">
    <constructor-arg ref="sessionFactory" />
  </bean>

  <bean id="genericDaoManager" class="com.cedarsoft.gdao.DefaultGenericDaoManager">
    <constructor-arg ref="daoFactory" />
  </bean>

  <bean id="asyncDaoManager" class="com.cedarsoft.gdao.async.AsynchronousDaoManager">
    <constructor-arg value="asyncDaoManagerTest" />
    <constructor-arg ref="genericDaoManager" />
  </bean>

  <bean id="genericServiceManager" class="com.cedarsoft.gdao.DefaultGenericServiceManager">
    <constructor-arg ref="genericDaoManager" />
    <constructor-arg ref="transactionManager" />
  </bean>

  <bean id="asyncServiceManager" class="com.cedarsoft.gdao.async.AsynchronousServiceManager">
    <constructor-arg value="asyncServiceManagerTest" />
    <constructor-arg ref="genericServiceManager" />
  </bean>


  <!-- Only for testing purposes. normally we don't implement own services in that kind -->
  <bean id="myObjectService" class="com.cedarsoft.gdao.MyObjectService">
    <constructor-arg ref="transactionManager" />
    <constructor-arg>
      <bean class="com.cedarsoft.gdao.spring.DaoFactory">
        <constructor-arg ref="genericDaoManager" />
        <constructor-arg value="com.cedarsoft.gdao.MyObject" />
      </bean>
    </constructor-arg>
  </bean>

</beans>
