<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
  <bean id="defaultStringConverterManager" class="com.cedarsoft.utils.StringConverterManager">
    <property name="stringConverters">
      <map>
        <entry key="java.lang.String">
          <bean class="com.cedarsoft.utils.StringConverterManager$StringStringConverter" />
        </entry>
        <entry key="java.awt.Rectangle">
          <bean class="com.cedarsoft.utils.StringConverterManager$RectangleConverter" />
        </entry>
        <entry key="java.awt.Point">
          <bean class="com.cedarsoft.utils.StringConverterManager$PointConverter" />
        </entry>
        <entry key="java.lang.Class">
          <bean class="com.cedarsoft.utils.StringConverterManager$ClassConverter" />
        </entry>
        <entry key="java.io.File">
          <bean class="com.cedarsoft.utils.StringConverterManager$FileConverter" />
        </entry>
        <entry key="java.lang.Boolean">
          <bean class="com.cedarsoft.utils.StringConverterManager$BooleanConverter" />
        </entry>
      </map>
    </property>
  </bean>

</beans>