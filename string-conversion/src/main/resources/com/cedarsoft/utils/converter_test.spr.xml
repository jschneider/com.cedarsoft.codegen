<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
  <bean id="customStringConverterManager" parent="defaultStringConverterManager"
        class="com.cedarsoft.utils.StringConverterManager">
    <property name="stringConverters">
      <map merge="true">
        <entry key="java.lang.StringBuilder">
          <bean class="com.cedarsoft.utils.ConversionSpringTest$AnObjectConverter" />
        </entry>
      </map>
    </property>
  </bean>

</beans>
